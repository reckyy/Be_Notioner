<header class="text-gray-600 body-font bg-white">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to root_path, class: "flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" do %>
      <%= image_tag('logo.png', class: "w-10 h-10 text-white p-2 rounded-full") %>

      <span class="ml-3 text-xl"><%= (t 'defaults.be_notioner') %></span>
    <% end %>

    <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
      <%= link_to (t 'defaults.shortcut'), shortcuts_path, class: "mr-5 btn btn-ghost hover:text-gray-900" %>
      <%= link_to (t 'defaults.templates'), templates_path, class: "mr-5 btn btn-ghost hover:text-gray-900" %>
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost m-1"><%= (t 'defaults.articles') %></label>
        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <%= link_to videos_path, class: "link link-hover" do %>
              <%= image_tag 'yt_icon_rgb.png', class: "inline-block h-6 w-6" %>Youtube
            <% end %>
          </li>
          <li>
            <%= link_to qiita_articles_path, class: "link link-hover" do %>
              <%= image_tag 'qiita.png', class: "inline-block h-6 w-6" %>Qiita
            <% end %>
          </li>
          <li>
            <%= link_to zenn_articles_path, class: "link link-hover" do %>
              <%= image_tag 'zenn.png', class: "inline-block h-6 w-6" %>Zenn
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <div class="flex-none gap-2">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar" id="header-avatar">
          <div class="w-10 rounded-full">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar %>
            <% else %>
              <%= image_tag('user_sample.png', size: "200x200") %>
            <% end %>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52 text-base-content">
          <li><%= link_to (t 'defaults.profile'), profile_path(current_user) %></li>
          <li><%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete } %></li>
          <li class="text-red-600"><%= link_to (t 'defaults.quit'), profile_path(current_user.id), data: { turbo_method: :delete, turbo_confirm: '本当に退会しますか？' } %></li>
        </ul>
      </div>
    </div>
  </div>
</header>
